  <rui-picker slot="flexchild" start="2000" end="2050" value="{{yearvalue}}" fields="year" bindchangedatepicker="changeYear"></rui-picker>
</rui-flex>

<rui-panel title="时间粒度为：month"></rui-panel>
<rui-flex rui-class="rui-flex">
  <text slot="flexchild">选择时间：</text>
  <rui-picker slot="flexchild" start="2000-01" end="2050-12" value="{{monthvalue}}" fields="month" bindchangedatepicker="changeMonth"></rui-picker>
</rui-flex>

<rui-panel title="时间粒度为：day"></rui-panel>
<rui-flex rui-class="rui-flex">
  <text slot="flexchild">选择时间：</text>
  <rui-picker slot="flexchild" start="2000-01-01" end="2050-12-31" value="{{dayvalue}}" fields="day" bindchangedatepicker="changeDay"></rui-picker>
</rui-flex>

<rui-panel title="时间粒度为：hour"></rui-panel>
<rui-flex rui-class="rui-flex">
  <text slot="flexchild">选择时间：</text>
  <rui-picker slot="flexchild" start="2000-01-01 00" end="2050-12-31 23" value="{{hourvalue}}" fields="hour" bindchangedatepicker="changeHour"></rui-picker>
</rui-flex>


