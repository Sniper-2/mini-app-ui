<rui-panel title="时间粒度为：second(时段选择)"></rui-panel>
<rui-flex rui-class="rui-flex">
  <text slot="flexchild">开始时间：</text>
  <rui-picker slot="flexchild" start="2018-03-15 10:45:00" end="2050-03-15 10:45:00" value="{{value}}" fields="second" bindchangedatepicker="changeDate0"></rui-picker>
</rui-flex>
<rui-flex rui-class="rui-flex">
  <text slot="flexchild">结束时间：</text>
  <rui-picker slot="flexchild" start="2000-03-15 10:45:00" end="2050-03-15 10:45:00" value="{{value1}}" fields="second" bindchangedatepicker="changeDate1"></rui-picker>
</rui-flex>

<rui-panel title="时间粒度为：second"></rui-panel>
<rui-flex rui-class="rui-flex">
  <text slot="flexchild">选择时间：</text>
  <rui-picker slot="flexchild" start="2000-01-01 00:00:00" end="2050-12-31 23:59:59" value="{{secondvalue}}" fields="second" bindchangedatepicker="changeSecond"></rui-picker>
</rui-flex>

