.rui-flex-content{
  display: -webkit-flex;
  display: flex;
}
.tui-city-scroll{
  flex: 0 0 auto;
  height: 100vh;
  width: 30vw;
}
.tui-city-scroll-y{
  flex: 0 0 auto;
  height: 100vh;
  width: 70vw;
}

.tui-nav-li{
  font-size: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  display: block;
  border-left:5px solid #fff;
  box-sizing: border-box;
}
.tui-nav-active{
  border-left:5px solid #2ed39e;
  color: #2ed39e;
}


.tui-list-head{
  height: 50px;
  line-height: 50px;
  text-align: center;
  font-size: 30rpx;
  background-color: #2ed39e;
  color: #fff;
  border: none;
}
.tui-list-li{
  padding:3vw 2vw 0;
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
}
.rui-goods-li{
  flex: 0 0 auto;
  width: 32%;
  height: 30vw;
  box-sizing: border-box;
  border: 1px solid #2ed39e;
  font-size: 4vw;
  color: #2ed39e;
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  padding: 2vw;
  margin-bottom: 2vw;
}