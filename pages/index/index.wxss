/* pages/index/index.wxss */
.rui-flex-content{
  background-color: #fff;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  left: 0;
  z-index: 1000;
  /* border-bottom:1px solid #c8c7cc; */
}
.rui-home-nav{
  width: 50%;
  text-align: center;
  font-size: 20px;
  height: 50px;
  line-height: 50px;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
}
.rui-home-nav.rui-active{
  color: #2ed39e;
}
.rui-home-nav.rui-active text{
  border-bottom: 4px solid #2ed39e;
}
.rui-list-content{
  background-color: #eee;
  padding-bottom: 1px;
  min-height: calc(100vh - 115px);
}
.rui-list-head{
  padding: 0 10px;
  font-size: 35rpx;
  color: #333;
  line-height:100rpx;
  border-bottom:1px solid #c8c7cc;
}
.rui-list-section{
  background-color: #fff;
  margin: 4vw;
  overflow: hidden;
}